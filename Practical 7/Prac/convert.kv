BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            font_size: 40
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                id: up_button
                text: 'Up'
                font_size: 40
                multiline: False
                on_press: app.handle_plus()
            Button:
                id: down_button
                text: 'Down'
                font_size: 40
                multiline: False
                on_press: app.handle_minus()
    Button:
        id: convert_km
        text: 'Convert m to km'
        on_press: app.handle_convert()
    Label:
        id: output_label
        font_size: 40
        color: (1, 1, 1, 1)